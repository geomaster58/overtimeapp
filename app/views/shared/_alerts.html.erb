<% if flash[:alert] %>
<%= js add_gritter(flash[:alert], title: "Overtime App Notification", sticky: false, image: :notice, time: 1300) %>
<% elsif flash[:notice] %>
<%= js add_gritter(flash[:notice], title: "Overtime App Notification", sticky: false, image: :notice, time: 1300) %>
<% else %>
<%= js add_gritter(flash[:error], title: "Overtime App Notification", sticky: false, image: :notice, time: 1300) %>
<% end %>